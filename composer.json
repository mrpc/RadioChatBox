{
    "name": "radiochatbox/radiochatbox",
    "description": "A scalable, real-time chat application for radio shows using SSE, Redis, and PostgreSQL",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Yannis - Pastis Glaros"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-redis": "*",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "RadioChatBox\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RadioChatBox\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

